<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Study on
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<header class="container">
			<div class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
				<a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none fs-4" href="/">
					Study on
				</a>
				<ul class="nav nav-pills align-items-center">
                {% if app.user %}
                    <li class="nav-item" style="margin-right: 10px;">
                        <h4 class="m-md-0"> Привет, {{ app.user.email }} </h4>
                    </li>
                    <li class="nav-item"><a href="{{ path('app_profile_show') }}" class="btn btn-primary">
                            Профиль
                        </a></li>
                    <li class="nav-item"><a href="{{ path('app_logout') }}" class="btn btn-outline-primary ms-2">
                            Выход
                        </a></li>
                {% else %}
                    <li class="nav-item"><a href="{{ path('app_login') }}" class="btn btn-primary">
                            Вход
                        </a></li>
                    <li class="nav-item"><a href="{{ path('app_register') }}" class="btn btn-outline-primary ms-2">
                            Регистрация
                        </a></li>
                {% endif %}

            </ul>
			</div>
		</header>
		<div class="container-fluid px-5"> {% block body %}{% endblock %}
			</div>
		</body>
	</html>
