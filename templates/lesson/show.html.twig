{% extends 'base.html.twig' %}

{% block title %}
	{{ lesson.name }}/{{lesson.course.name}}/StudyOn
{% endblock %}

{% block body %}
	<h1 class="lesson-name">{{ lesson.name }}</h1>
	<h2>
		<a class='course' href="{{ path('app_course_show', {'id': lesson.course.id}) }}">{{ lesson.course.name }}</a>
	</h2>
	<h3 class="content card-text">{{ lesson.content }}</h3>

	{% if is_granted('ROLE_SUPER_ADMIN') %}
		<div>
			<a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Редактировать</a>

			{{ include('lesson/_delete_form.html.twig') }}
		</div>
	{% endif %}
{% endblock %}
